<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
            id="bedit_ecoles_report_activity"
            model="bedit_ecoles.activity"
            string="Activity"
            name="bedit_ecoles.report_activity"
            file="bedit_ecoles.report_activity"
            report_type="qweb-html"/>

        <template id="report_activity">
            <t t-call="report.html_container">
                <!-- REMEMBER, docs is the selected records either in form view or checked in list view (usually). So the line below says use the following template for each record that has been selected. -->
                <t t-foreach="docs" t-as="doc"><!-- docs is obligatory ? -->
                    <t>
                        <div class="page">
                            <h1>Report For <t t-esc="doc.name"/></h1>
                            <table class="table">
                                <tr>
                                    <th>Year</th>
                                    <th>School</th>
                                    <th>Company</th>
                                    <th>Number</th>
                                </tr>
                                <tr>
                                    <td><t t-esc="doc.year"/></td>
                                    <td><t t-esc="doc.school_name"/></td>
                                    <td><t t-esc="doc.company_name"/></td>
                                    <td><t t-esc="doc.number"/></td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
